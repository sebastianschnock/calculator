{
  "name": "calculator",
  "version": "1.0.0",
  "description": "A customizable calculator widget for your webpage",
  "scripts": {
    "test": "mocha --compilers js:babel-register --reporter nyan",
    "build:html": "cp src/html/* dist",
    "build:css": "cp src/css/* dist",
    "build:js": "browserify src/js/app.js -t babelify --outfile dist/calculator.js",
    "build": "npm run build:html && npm run build:css && npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastianschnock/calculator.git"
  },
  "author": "Sebastian Schnock",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/sebastianschnock/calculator/issues"
  },
  "homepage": "https://github.com/sebastianschnock/calculator",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.4.3",
    "babelify": "^7.2.0",
    "chai": "^3.4.1",
    "mocha": "^2.4.3"
  }
}
